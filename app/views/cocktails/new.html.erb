  <div class="container mt-5">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="form">
          <h1>Create a Cocktail</h1>
          <div class="mt-3">

            <%= simple_form_for @cocktail do |f| %>
                <%= f.input :name %>
                <%= f.button :submit, :class => "btn btn-primary" %>
                <% end %>
              </div>
              <div class="mt-3">
                <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>
              </div>
          </div>
        </div>
      </div>
