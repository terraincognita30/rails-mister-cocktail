
  <div class="container mt-5">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="form">
<h1><%=@cocktail.name%></h1>
<br>
<div class="mt-3">

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h3 style="padding-top: 30px;">Ingredients</h3>
<%@cocktail.doses.each do |dose|%>
<ul class = "styleless" style= "list-style: none">
<li style= "padding: 10px;"> <%=dose.description%> <%=dose.ingredient.name%><br>
  <%= link_to "Delete", dose_path(dose), method: :delete %>
</li>
</ul>
<%end%>
</div>

<h3>Reviews</h3>
<%@cocktail.reviews.each do |review|%>
<ul class = "styleless" style= "list-style: none">
<li> <strong><%=review.review_name%></strong>
  <br> <%=review.content%><br>
  <%= link_to "Delete", cocktail_path(@cocktail), method: :delete %>
</li>
</ul>
<%end%>

<div class="row mt-2">
    <div class="col-lg-12">
<%= link_to "Back", cocktails_path, class: "btn btn-primary" %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

<%= link_to "Write a review", new_cocktail_review_path(@cocktail), class: "btn btn-primary" %>
</div>
              </div>
            </div>
          </div>
        </div>
      </div>
